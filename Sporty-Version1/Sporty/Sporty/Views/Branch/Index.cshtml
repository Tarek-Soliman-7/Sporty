@model IEnumerable<Sporty.Models.Branch>
@using Microsoft.AspNetCore.Identity

@{

    ViewData["Title"] = "Branches";

}

<h1>Branches</h1>
@if (User.IsInRole("ClubAdmin"))
{

    <p>
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </p>

}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>

                <td>
                    @if (User.IsInRole("ClubAdmin")) { <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>@:|
                    }
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>|
                @if(User.IsInRole("ClubAdmin")) { <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a> }
            </td>
        </tr>
}
    </tbody>
</table>
