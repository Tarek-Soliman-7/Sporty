<!DOCTYPE html>
@using Microsoft.AspNetCore.Identity

@{
    Layout = "";
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/dashboardlayout/sideBar.css">
    <link rel="stylesheet" href="~/css/dashboardlayout/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito&display=swap" rel="stylesheet" />

    <title>Profile</title>
</head>

<body>
    <div class="side-bar">
        <p style="color: #212121; margin-left: 40px; font-family: Nunito, sans-serif;">
            <b>SPORTY UI DASHBOARD</b>
        </p>
        <hr class="separator" />

        <a href="@Url.Action("DisplayRequests", "MembershipRequests")" style="text-decoration: none; color: inherit;">
            <div class="items">
                <span class="icon"><i class="fa-solid fa-house"></i></span>
                <span class="description">Membership Requests</span>
            </div>
        </a>

        <div class="items">
            <span class="icon"><i class="fa-solid fa-user"></i></span>
            <span class="description">Profile</span>
        </div>

            <a href="@Url.Action("Index", "Branch")" style="text-decoration: none; color: inherit;">
            <div class="items">
                <span class="icon"><i class="fa-solid fa-user"></i></span>
                <span class="description">Branch</span>
            </div>
            </a>
        <a href="@Url.Action("Index", "Event")" style="text-decoration: none; color: inherit;">
        <div class="items">
            <span class="icon"><i class="fa-solid fa-calendar"></i></span>
            <span class="description">Events</span>
        </div>
        </a>

        <a href="@Url.Action("Index", "Membership")" style="text-decoration: none; color: inherit;">
            <div class="items">
                <span class="icon"><i class="fa-solid fa-user"></i></span>
                <span class="description">MemberShip</span>
            </div>
        </a>

        <a href="@Url.Action("Index", "Booking")" style="text-decoration: none; color: inherit;">
        <div class="items">
            <span class="icon"><i class="fa-solid fa-wallet"></i></span>
            <span class="description">Booking</span>
        </div>
        </a>

        <div class="help">
            <span class="icon-h"><i class="fa-solid fa-circle-question"></i></span>
            <p style="color: white; margin-left: 5px;  font-family: Nunito, sans-serif;"><b>Need help?</b></p>
            <p style="color: white; margin-left: 5px; font-family: Nunito, sans-serif;">Please check our docs</p>
            <button class="button" style=" font-family: Nunito, sans-serif;"><b>DOCUMENTATION</b></button>
        </div>

        <div class="notification-wrapper" onclick="toggleNotifications()">
            <div class="notification-bell">
                <svg xmlns="http://www.w3.org/2000/svg" class="bell-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                          d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V4a2 2 0 10-4 0v1.341C8.67 6.165 8 7.388 8 8.75v5.408c0 .538-.214 1.055-.595 1.437L6 17h5m4 0v1a3 3 0 11-6 0v-1m6 0H9" />
                </svg>
                <span class="notification-badge" id="notificationCount">3</span>
            </div>
        </div>

        
            <a asp-controller="Account" asp-action="Logout" class="login-btn">Logout</a>
        
       
    </div>

    <div class="main-content">
        @RenderBody()
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>